<style>

  h2 {
    font-size: 3rem;
    color: #5DD5FF;
  }
  .timeline-section {
    margin: 2rem 0;
    max-width: 900px;
    margin: auto;
  }

  .year-section {
    display: flex;
    flex-direction: column;
    align-items: center; 
    text-align: center; 
    margin-bottom: 2rem;
}

  .year-content {
      margin-bottom: 1rem;
  }

  .year-image {
    width: 100%;
    max-width: 300px;
    border-radius: 8px;
    object-fit: cover;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

  .gallery-section {
    margin: 6rem 0; 
    text-align: center;
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem; 
    padding: 2rem;
    max-width: 900px;
    margin: auto;
  }

  .gallery-item {
    width: 100%;
    border-radius: 8px;
    object-fit: cover;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover {
    transform: scale(1.05);
  }
</style>
