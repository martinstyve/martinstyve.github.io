---
import Layout from "../components/Layout.astro";
---

<Layout title="My first docker website">
  <div class="container">
    <h1>Martin Styve Pedersen</h1>
    <p>
      Welcome to my first website built with Astro and Docker on a friByte
      workshop!
    </p>
    <img src="public/martinRandonee.JPG" alt="Martin photo" />
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    background: #1c1d23;
    border-radius: 8px;
    margin-top: 2rem;
  }
  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: #f1f1f1;
  }
  img {
    width: 100%;
    max-width: 600px;
    border-radius: 8px;
    margin-top: 2rem;
  }
</style>